<script src="/js/change_pass.js"></script>


<div id="work" class="page">
	<div class="container">

    <h2 class="mobile_log">Modifica profilo</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

		<div class="field mobile_log">
	    <%= f.label :nickname %>
			<%= f.text_field :nickname, autofocus: true %>
	  </div>

		<br/>

		<div class="field mobile_log">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

		<br/>
		<div class="form-group mobile_log">

				<%= f.label :avatar  %>
				<%if current_user.avatar_file_name%>
					<img src=<%=current_user.avatar.url(:medium)%> >
				<%else%>
					<img src="/images/no-avatar.png" >
				<%end%>
				<%= f.file_field :avatar, class: :avatar_input %>
		</div>

		<br/>

		<div class="field mobile_log">
			<%= f.label :passoword_attuale %>
			<%= f.password_field :current_password, autocomplete: "off" %>
		</div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

		<hr class="hr_log_v2">
		 <a href="#2" id="panel_change_pass" onclick="myFunction()" class="btn_change"><i class="font-icon-arrow-simple-down">Cambia Password</i></a>

		<div id="change_pass">
			<p class="mobile_log">(lasciare in bianco se non la si vuole cambiare)</p>

    	<div class="field mobile_log">
      	<%= f.label :nuova_password %>
      	<%= f.password_field :password, autocomplete: "off" %>
    	</div>

			<br />

    	<div class="field mobile_log">
      	<%= f.label :conferma_nuova_password%>
      	<%= f.password_field :password_confirmation, autocomplete: "off" %>
    	</div>
		</div>
		<hr class="hr_log_v2">

		<h3 class="mobile_log">Aggiorna il tuo profilo </h3>
    <div class="actions mobile_log">
      <%= f.submit "Update" %>
    </div>
    <% end %>

		<hr class="hr_log">

  	<h3 class="mobile_log">Cancella il tuo account </h3>
	  <div class="mobile_log">
			<%= button_to "Cancella il tuo account", registration_path(resource_name), :class => :delete_button, data: { confirm: "Are you sure?" }, method: :delete %>
		</div>
	</div>
</div>

